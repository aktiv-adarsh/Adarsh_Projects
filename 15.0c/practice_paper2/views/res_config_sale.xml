<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_sale_check_promotional_discount" model="ir.ui.view">
            <field name="name">Promotional Discount</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">

                <xpath expr="//div[@data-key='sale_management']/div[1]" position="after">
                    <h2>Promotional Discount</h2>

                    <div class="row mt16 o_settings_container">
                        <div class="col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="check_promotional_discount"/>
                            </div>

                            <div class="o_setting_right_pane">
                                <label for="check_promotional_discount"/>
                                <div class="text-muted">
                                    Click check to show Apply Promotional Discount button on sale order.
                                </div>
                            </div>
                        </div>

                    </div>
                </xpath>

            </field>
        </record>

    </data>
</odoo>
