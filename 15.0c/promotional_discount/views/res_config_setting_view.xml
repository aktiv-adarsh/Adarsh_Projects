<odoo>

    <record id="res_config_setting_view" model="ir.ui.view">
      <field name="name">res_config_settings_view_form</field>
      <field name="model">res.config.settings</field>
      <field name="inherit_id" ref="base.res_config_settings_view_form"/>
      <field name="arch" type="xml">
        <xpath expr="//div[@data-key='sale_management']/div[1]" position="after">
            <h2>Promotional Discount</h2>
            <div class="row mt16 o_settings_container">
              <div class="col-12 col-lg-6 o_setting_box">
                <span><b>Promotional Discount</b></span>
                <div>
                  <field name="promotional_discount"/>
                </div>
              </div>
            </div>
        </xpath>
      </field>
    </record>

</odoo>