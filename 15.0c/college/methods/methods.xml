<odoo xmlns:default_email="http://www.w3.org/2001/XMLSchema">
  <data>
<!--     explicit list view definition-->
    <record model="ir.ui.view" id="methods_order_form">
      <field name="name">sale_order_form</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.view_order_form"/>
      <fields name="arch" type="xml">
          <form>
              <header>
                  <button name="%(method_wizard_action_window)d" string="Show all details" type="action" class="btn btn-primary"/>
              </header>
          </form>
      </fields>
    </record>


    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="method_wizard_action_window">
      <field name="name">List window</field>
      <field name="res_model">sale.order</field>
      <field name="view_mode">tree,form</field>
      <field name="target">new</field>
    </record>

  </data>
</odoo>
