<odoo>
    <data>
        <record id="special_operator_sale_script_form" model="ir.ui.view">
            <field name="name">Sale Order</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <!-- dummy, will be modified by groups -->
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="sale_customer_rank"/>
                </xpath>

                <xpath expr="//button[@name='action_quotation_send']" position="after">
                    <button name="%(student_management.wizard_pids_action)d" string="Select Products" type="action" class="btn-primary"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
