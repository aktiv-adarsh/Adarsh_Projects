                            <!--                                <td>-->
                            <!--                                    <span t-field="object.student_paid_fees"/>-->
                            <!--                                </td>-->
                            <!--                            </tr>-->
                            <!--                            <tr>-->
                            <!--                                <th name="th_student_pending_fees" class="text-left">Pending Fees:</th>-->
                            <!--                                <td>-->
                            <!--                                    <span t-field="object.student_pending_fees"/>-->
                            <!--                                </td>-->
                            <!--                            </tr>-->
                        </table>

                    </p>
                </div>

            </field>
            <field name="report_name">student_details</field>

        </record>
    </data>
</odoo>